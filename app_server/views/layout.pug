doctype html
html
  head
    meta(charset='utf-8')
    meta(http-equiv="X-UA-Compatible" content="ie=edge")
    meta(name='viewport' content='width=device-width initial-scale=1.0 shrink-to-fit=no')
    title= title
    link(rel='stylesheet' href='/stylesheets/bootstrap/css/bootstrap.min.css')
    link(rel='stylesheet' href='/font-awesome/css/all.min.css')
    link(rel='stylesheet' href='/stylesheets/style.css')
  body
    //The layout page from which all other pages are designed
    //Use this layout to create your web pages
    //Contents in the body tag can be deleted and replaced with your our markup

    //start navigation
    //Sets up a Bootstrap navigation bar
      fixed to the top of the window
    nav.navbar.fixed-top.navbar-expand-md.navbar-dark.bg-dark
        //Adds abrandstyledlinkto thehomepage
        a.navbar-brand(href="#") Loc8r
        //Sets up collapsing navigation for
          smaller screen resolutions
        button.navbar-toggler(type="button" data-toggle="collapse" data-target="#navbarMain" aria-controls="navbarMain" aria-expanded="false" aria-label="Toggle navigation")
            span.navbar-toggler-icon
        div.collapse.navbar-collapse#navbarMain
            ul.navbar-nav.mr-auto
                li.nav-item
                    a.nav-link(href="#") About
                li.nav-item
                    a.nav-link(href="#") Portfolio
                li.nav-item
                    a.nav-link(href="#") Services
    //end navigation

    //start main
    main
        //content container
        div.container-fluid.content
            div.row
                div.col-md-3.mt-5.sidebar
                    section.col-md-12.col-sm-12.col-lg-12.col-xl-12
                        ul.navbar-nav.mr-auto
                            li.nav-item
                                a.nav-link( href="#" ) Link 1
                            li.nav-item
                                a.nav-link( href="#" ) Link 2
                            li.nav-item
                                a.nav-link( href="#" ) Link 3
                            li.nav-item
                                a.nav-link( href="#" ) Link 4
                            li.nav-item
                                a.nav-link( href="#" ) Link 3
                div.col-md-9.mt-5.aside
                    aside.col-md-12.col-sm-12.col-lg-12.col-xl-12
                        div.card.card-primary
                            div.card-block
                                block content
            //main footer
            div#footer
                div.row
                    div.col-12.col-md-12.col-sm-12
                        hr(style="background: whitesmoke; margin: 0%; padding: 0%;width: 100%")
                        small &copy; Welcome to Loc8r for a greater experience
                        //end main footer
        //end content container
    //end main

